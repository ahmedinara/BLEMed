@using BSMediator.FrontEnd.ResourceFiles
@model BSMediator.Core.Models.UserModel

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-lg">

        <div class="card-box">
            <h4 class="header-title">@UI.EditUser</h4>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-6">
                        <label asp-for="FristName" class="control-label"></label>
                        <input asp-for="FristName" class="form-control" />
                        <span asp-validation-for="FristName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="MobileNo" class="control-label"></label>
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                  


                <div class="form-group">
                    <div class="checkbox checkbox-purple">
                        <input id="checkbox6a" type="checkbox" asp-for="IsActive">
                        <label for="checkbox6a">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>

                </div>

                <div class="form-group text-right mb-0">
                    <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                        @UI.Submit
                    </button>

                    <a asp-action="Index" type="reset" class="btn btn-secondary waves-effect waves-light">@UI.Cancel</a>
                </div>

            </form>
        </div> <!-- end card-box -->
    </div>
</div>





@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}