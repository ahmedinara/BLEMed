@model IEnumerable<BSMediator.Core.Entities.User>

@using BSMediator.FrontEnd.ResourceFiles;
@using System.Globalization;

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-start mt-2">

       <div class="col-md-3  mb-1">
       <a asp-action="Create" class="btn btn-primary ">@UI.AddUser</a>

    </div>
</div>
<div class="row mt-2 ">
  


    <div class="col-12">

        <div class="card-box table-responsive">
            <h1 class="header-title">@UI.UserList</h1>
      


            <table id="tbl" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.FristName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MobileNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.FristName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MobileNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>


                            <td>
@*                                 <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
*@                                 <a class="btn btn-success" href="UserAdmin/Edit/@item.Id" ><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tbl').DataTable(
            {
                "language": {
                    "search": "@UI.Search :",
                    "info": "@UI.Showing _START_ @UI.to _END_ @UI.of _TOTAL_ @UI.entries ",
                    "infoEmpty": "@UI.Showing 0 @UI.to 0 @UI.of  0 @UI.entries",
                    "infoFiltered": "(@UI.FilteredFrom  _MAX_ @UI.TotalData)",
                    "infoPostFix": "",
                    "lengthMenu": "@UI.Showing _MENU_ @UI.entries",
                    "loadingRecords": "@UI.LoadingData",
                    "processing": "@UI.Processing",
                    "zeroRecords": "@UI.zeroRecords",
                    "paginate": {
                        "first": "@UI.first",
                        "last": "@UI.last",
                        "next": "@UI.next",
                        "previous": "@UI.previous"
                    }
                }

            });


    });
</script>